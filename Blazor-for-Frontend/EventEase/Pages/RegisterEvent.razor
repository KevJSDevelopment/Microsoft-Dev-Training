@page "/register-event"
@using EventEase.Models
@inject NavigationManager Navigation

<PageTitle>Create New Event</PageTitle>

<h3>Create a New Event</h3>

<EditForm Model="NewEvent" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Name:</label>
        <InputText @bind-Value="NewEvent.Name" class="form-control" />
    </div>
    <div>
        <label>Location:</label>
        <InputText @bind-Value="NewEvent.Location" class="form-control" />
    </div>
    <div>
        <label>Date and Time:</label>
        <InputDate @bind-Value="NewEvent.StartDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Event</button>
</EditForm>

@code {
    private Event NewEvent = new Event(); // Holds the new event data.

    private async Task HandleValidSubmit()
    {
        // Trigger the save event logic (e.g., redirect to home passing the new event)
        Home.Events.Add(NewEvent); // Adding to the shared list
        Navigation.NavigateTo("/"); // Navigate back to the home page
    }
}